#!/usr/bin/env bash
# Configures a new Ubuntu machine:
# - Installs Nginx
# - Serves Hello World at /
# - Redirects /redirect_me permanently to a YouTube link
# - Serves a custom 404 page containing "Ceci n'est pas une page"

set -e

# Update and install nginx quietly
apt-get update -y -qq
apt-get install nginx -y -qq

# Start nginx service
service nginx start

# Allow Nginx through the firewall
ufw allow 'Nginx HTTP' || true

# Give the current user ownership to /var/www/html
chown -R "$USER":"$USER" /var/www/html
chmod -R 755 /var/www

# Create the main index page
echo "Hello World!" > /var/www/html/index.html

# Create the custom 404 page
echo "Ceci n'est pas une page" > /var/www/html/error_404.html

# Backup the default nginx config
cp /etc/nginx/sites-available/default /etc/nginx/sites-available/default.bckp

# Configure /redirect_me and 404 page
sed -i '/server_name _;/a \
    location /redirect_me {\
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\
    }\
    error_page 404 /error_404.html;' /etc/nginx/sites-available/default

# Reload nginx without systemctl
service nginx restart

echo "Setup complete. Your custom 404 page contains Ceci n'est pas une page."
